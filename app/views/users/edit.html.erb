<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>

<%= form_with model: @user do |f| %>
<div class="field">  
   <%= f.label :name, "Name" %><br>
   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
   </div>
<div class="field">  
   <%= f.label :profile_image, "image" %><br>
   <%=f.file_field :profile_image, pleceholder:"プロフィール画像", accept: "image/*"%>
   </div>
<div class="field">  
   <%= f.label :introduction, "introduction" %><br>
   <%=f.text_area :introduction, id:"inputIntroduction" %>
   </div>
   <%=f.submit "Update User" %>
<% end %>

</div>
</div>
</div>
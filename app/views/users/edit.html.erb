<h2>User info</h2>
<%= form_with model: @book do |f| %>
   <label for="inputName">Name</label>
   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
   
   <label for="inputImage">Image</label>
   <%=f.file_field :profile_image, pleceholder:"プロフィール画像" accept: "image/*"%>
   
   <label for="inputIntroduction">introduction</label>
   <%=f.text_area :introduction, id:"inputIntroduction" %>
   
   <%=f.submit "Update User" %>
<% end %>